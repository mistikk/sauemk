@using sauemk.web.Models
@model LoginViewModel
@{
    ViewBag.Title = "Log in";
    Layout = null;
}

<div ng-controller="Account.Login.Controller">
    <form role="form">
        <div class="row">
            <div class="col-md-4">
                &nbsp;
            </div>
            <div class="col-md-4">
                <h2 class="form-login-heading">Login</h2>
                <input ng-disabled="loading" type="text" class="form-control" placeholder="Username" data-ng-model="loginData.userName" required autofocus>
                <input ng-disabled="loading" type="password" class="form-control" placeholder="Password" data-ng-model="loginData.Password" required>
                <div class="checkbox" >
                    <label>
                        <input ng-disabled="loading" type="checkbox" data-ng-model="loginData.useRefreshTokens"><strong> Use Refresh Tokens</strong>
                    </label>
                </div>
                <button ng-disabled="loading" class="btn btn-md btn-info btn-block" type="submit" data-ng-click="login()" style="max-width:280px;">Login</button>

                <i ng-show="loading" class="fa fa-spinner fa-spin"></i>
            </div>
            <div class="col-md-4">
                &nbsp;
            </div>
        </div>
    </form>
</div>
